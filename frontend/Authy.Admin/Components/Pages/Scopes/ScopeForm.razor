@page "/organizations/{OrgId:guid}/scopes/new"
@page "/organizations/{OrgId:guid}/scopes/{ScopeName}/edit"
@inject IDispatcher Dispatcher
@inject IAdminContext AdminContext
@inject NavigationManager Navigation
@using Authy.Application.Domain.Organizations
@using Authy.Application.Domain.Scopes

<PageTitle>@(IsEditMode ? "Edit Scope" : "Create Scope") - Authy Admin</PageTitle>

<div class="breadcrumb">
    <a href="/organizations">Organizations</a> /
    <a href="/organizations/@OrgId">@orgName</a> /
    <a href="/organizations/@OrgId/scopes">Scopes</a> /
    @(IsEditMode ? $"Edit {ScopeName}" : "New")
</div>

<h1>@(IsEditMode ? $"Edit Scope: {ScopeName}" : "Create New Scope")</h1>

<Alert Type="@alertType" Visible="@showAlert" Message="@alertMessage" OnDismiss="@(() => showAlert = false)" />

@if (isLoading)
{
    <LoadingSpinner IsLoading="true" Message="Loading..." />
}
else
{
    <div class="form-container">
        <form @onsubmit="SaveScope">
            <div class="form-group">
                <label for="scopeName">Scope Name</label>
                <input type="text" id="scopeName" @bind="scopeName" class="form-input"
                       placeholder="Enter scope name (e.g., read:users, write:posts)" />
                <small class="form-help">
                    Scope names typically follow a pattern like "action:resource" (e.g., read:users, write:posts, admin:all).
                </small>
            </div>

            @if (IsEditMode && existingScope != null && existingScope.Roles.Any())
            {
                <div class="form-group">
                    <label>Used by Roles</label>
                    <div class="role-list">
                        @foreach (var role in existingScope.Roles)
                        {
                            <span class="role-badge">@role.Name</span>
                        }
                    </div>
                    <small class="form-help">
                        This scope is currently assigned to the above roles.
                    </small>
                </div>
            }

            <div class="form-actions">
                <button type="button" class="btn btn-secondary" @onclick="Cancel">Cancel</button>
                <button type="submit" class="btn btn-primary" disabled="@isSaving">
                    @if (isSaving)
                    {
                        <span>Saving...</span>
                    }
                    else
                    {
                        <span>@(IsEditMode ? "Update Scope" : "Create Scope")</span>
                    }
                </button>
            </div>
        </form>
    </div>
}

@code {
    [Parameter] public Guid OrgId { get; set; }
    [Parameter] public string? ScopeName { get; set; }

    private bool IsEditMode => !string.IsNullOrEmpty(ScopeName);

    private string orgName = string.Empty;
    private string scopeName = string.Empty;
    private string originalScopeName = string.Empty;
    private GetScopesOutput? existingScope;
    private bool isLoading = true;
    private bool isSaving = false;

    private bool showAlert = false;
    private string alertMessage = string.Empty;
    private Alert.AlertType alertType = Alert.AlertType.Info;

    // Mock user ID for authorization
    private readonly Guid mockUserId = Guid.Parse("f7fa1c38-9736-41b6-91b8-0745d0cec70e");

    protected override async Task OnParametersSetAsync()
    {
        await LoadData();
    }

    private async Task LoadData()
    {
        isLoading = true;

        // Load organization name
        var orgsResult = await Dispatcher.DispatchAsync(new GetOrganizationsQuery(), CancellationToken.None);
        if (orgsResult.IsSuccess)
        {
            var org = orgsResult.Value.FirstOrDefault(o => o.Id == OrgId);
            if (org != null)
            {
                orgName = org.Name;
            }
        }

        // If editing, load existing scope data
        if (IsEditMode && !string.IsNullOrEmpty(ScopeName))
        {
            var scopesResult = await Dispatcher.DispatchAsync(
                new GetScopesQuery(OrgId, mockUserId),
                CancellationToken.None);

            if (scopesResult.IsSuccess)
            {
                var decodedScopeName = Uri.UnescapeDataString(ScopeName);
                existingScope = scopesResult.Value.FirstOrDefault(s =>
                    s.Name.Equals(decodedScopeName, StringComparison.OrdinalIgnoreCase));

                if (existingScope != null)
                {
                    scopeName = existingScope.Name;
                    originalScopeName = existingScope.Name;
                }
                else
                {
                    ShowAlert($"Scope '{decodedScopeName}' not found.", Alert.AlertType.Error);
                }
            }
        }

        isLoading = false;
    }

    private async Task SaveScope()
    {
        if (string.IsNullOrWhiteSpace(scopeName))
        {
            ShowAlert("Scope name is required.", Alert.AlertType.Warning);
            return;
        }

        isSaving = true;

        // For create: use scopeName as both the lookup key and the UpsertFields.Name
        // For edit: use originalScopeName as the lookup key, scopeName as the new name
        var lookupName = IsEditMode ? originalScopeName : scopeName;
        var upsertFields = new UpsertScopeFields(scopeName);

        var result = await Dispatcher.DispatchAsync(
            new UpsertScopeCommand(OrgId, lookupName, mockUserId, upsertFields),
            CancellationToken.None);

        if (result.IsSuccess)
        {
            Navigation.NavigateTo($"/organizations/{OrgId}/scopes");
        }
        else
        {
            ShowAlert($"Error saving scope: {result.Error.Description}", Alert.AlertType.Error);
        }
        isSaving = false;
    }

    private void Cancel()
    {
        Navigation.NavigateTo($"/organizations/{OrgId}/scopes");
    }

    private void ShowAlert(string message, Alert.AlertType type)
    {
        alertMessage = message;
        alertType = type;
        showAlert = true;
    }
}

