@page "/organizations"
@inject IDispatcher Dispatcher
@inject IAdminContext AdminContext
@using Authy.Application.Domain.Organizations
@using System.ComponentModel.DataAnnotations
@rendermode InteractiveServer

<PageTitle>Organizations - Authy Admin</PageTitle>

<div class="page-header">
    <div>
        <h1>Organizations</h1>
        <p class="page-subtitle">Create and manage organizations in your tenant.</p>
    </div>
</div>

@if (!AdminContext.IsRootUser)
{
    <Alert Type="Alert.AlertType.Error" Visible="true" Dismissible="false"
           Message="Access denied. Only root users can manage organizations." />
}
else
{
    <Alert Type="@alertType" Visible="@showAlert" Message="@alertMessage" OnDismiss="@(() => showAlert = false)" />

    <div class="create-form">
        <h3>Create Organization</h3>
        <EditForm EditContext="editContext" OnValidSubmit="CreateOrganization">
            <DataAnnotationsValidator />
            <ValidationSummary class="validation-summary" />
            <div class="form-group inline">
                <InputText class="form-input" @bind-Value="orgModel.OrganizationName" placeholder="Organization name" />
                <button type="submit" class="btn btn-primary" disabled="@isCreating">
                    @if (isCreating)
                    {
                        <span>Creating...</span>
                    }
                    else
                    {
                        <span>Create</span>
                    }
                </button>
            </div>
            <ValidationMessage For="@(() => orgModel.OrganizationName)" />
        </EditForm>
    </div>

    <DataTable Items="organizations" IsLoading="isLoading" TItem="GetOrganizationsOutput" EmptyMessage="No organizations found.">
        <HeaderTemplate>
            <th>Name</th>
            <th>ID</th>
            <th>Actions</th>
        </HeaderTemplate>
        <RowTemplate Context="org">
            <td>@org.Name</td>
            <td><code>@org.Id</code></td>
            <td>
                <NavLink href="/organizations/@org.Id" class="btn btn-sm btn-secondary">View Details</NavLink>
            </td>
        </RowTemplate>
    </DataTable>
}

@code {
    private List<GetOrganizationsOutput> organizations = [];
    private bool isLoading = true;
    private bool isCreating = false;
    private readonly CreateOrganizationModel orgModel = new();
    private EditContext? editContext;

    private bool showAlert = false;
    private string alertMessage = string.Empty;
    private Alert.AlertType alertType = Alert.AlertType.Info;

    protected override void OnInitialized()
    {
        editContext = new EditContext(orgModel);
    }

    protected override async Task OnInitializedAsync()
    {
        if (AdminContext.IsRootUser)
        {
            await LoadOrganizations();
        }
        else
        {
            isLoading = false;
        }
    }

    private async Task LoadOrganizations()
    {
        isLoading = true;
        var result = await Dispatcher.DispatchAsync(new GetOrganizationsQuery(), CancellationToken.None);
        if (result.IsSuccess)
        {
            organizations = result.Value;
        }
        else
        {
            ShowAlert($"Error loading organizations: {result.Error.Description}", Alert.AlertType.Error);
        }
        isLoading = false;
    }

    private async Task CreateOrganization()
    {
        isCreating = true;
        StateHasChanged();

        try
        {
            var result = await Dispatcher.DispatchAsync(new CreateOrganizationCommand(orgModel.OrganizationName), CancellationToken.None);

            if (result.IsSuccess)
            {
                ShowAlert($"Organization '{result.Value.Name}' created successfully!", Alert.AlertType.Success);
                orgModel.OrganizationName = string.Empty;
                editContext?.NotifyFieldChanged(new FieldIdentifier(orgModel, nameof(CreateOrganizationModel.OrganizationName)));
                await LoadOrganizations();
            }
            else
            {
                ShowAlert($"Error creating organization: {result.Error.Description}", Alert.AlertType.Error);
            }
        }
        catch (Exception ex)
        {
            ShowAlert($"Error: {ex.Message}", Alert.AlertType.Error);
        }
        finally
        {
            isCreating = false;
        }
    }

    private void ShowAlert(string message, Alert.AlertType type)
    {
        alertMessage = message;
        alertType = type;
        showAlert = true;
    }

    private sealed class CreateOrganizationModel
    {
        [Required(ErrorMessage = "Organization name is required.")]
        public string OrganizationName { get; set; } = string.Empty;
    }
}
