@if (IsLoading)
{
    <div class="loading-spinner">
        <div class="spinner"></div>
        @if (!string.IsNullOrEmpty(Message))
        {
            <p>@Message</p>
        }
    </div>
}

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string? Message { get; set; }
}
